mixin mngAccordionItem(itemName)
    .c-mngAccordion__item.js-accordion-item
        button.c-mngAccordion__btn.js-accordion-button
            span.c-mngAccordion__text #{itemName}
            i.o-mngIco__arrow_down--12
        .c-mngAccordion__content
            p Contenido de #{itemName}

mixin mngAccordion(itemNames)
    .c-mngAccordion
        for itemName in itemNames
            +mngAccordionItem(itemName)