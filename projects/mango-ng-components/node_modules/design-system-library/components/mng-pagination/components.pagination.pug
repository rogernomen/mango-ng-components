mixin mngPagination(style)
	ul.c-mngPagination(class=style)
		li.c-mngPagination__item.c-mngPagination__item--btn
			a(href="").c-mngPagination__link &lt;
		li.c-mngPagination__item
			a(href="").c-mngPagination__link 1
		li.c-mngPagination__item
			a(href="").c-mngPagination__link 2
		li.c-mngPagination__item
			a(href="").c-mngPagination__link 3
		li.c-mngPagination__item
			a(href="").c-mngPagination__link 4
		li.c-mngPagination__item.is-active
			a(href="").c-mngPagination__link 5
		li.c-mngPagination__item
			a(href="").c-mngPagination__link 6
		li.c-mngPagination__item
			a(href="").c-mngPagination__link 7
		li.c-mngPagination__item.c-mngPagination__item--gap ...
		li.c-mngPagination__item
			a(href="").c-mngPagination__link 15
		li.c-mngPagination__item.c-mngPagination__item--btn
			a(href="").c-mngPagination__link &gt;

mixin mngPaginationReverse()
	+mngPagination('c-mngPagination--reverse')