
mixin mngKebabMenu($isReverse)
  if $isReverse == 'inverse'
    .c-mngKebabMenu.c-mngKebabMenu--reverse
      .c-mngKebabMenu__icon
        +mng-icon-svg('more_vert--16')
      ul.c-mngKebabMenu__content
        li.c-mngKebabMenu__item Item 1
        li.c-mngKebabMenu__item Item 2
        li.c-mngKebabMenu__item Item 3

  else
    .c-mngKebabMenu
      .c-mngKebabMenu__icon
        +mng-icon-svg('more_vert--16')
      ul.c-mngKebabMenu__content
        li.c-mngKebabMenu__item Item 1
        li.c-mngKebabMenu__item Item 2
        li.c-mngKebabMenu__item Item 3

