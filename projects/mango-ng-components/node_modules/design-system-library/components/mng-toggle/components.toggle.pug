mixin mngToggle(side)
    .c-mngToggle
        if(side=='Left')
            label(for='mngToggle')
                .c-mngToggle__layout
                    .c-mngToggle__input
                        input#mngToggle.c-mngToggle__checkbox(type='checkbox', name='toggle')
                        .c-mngToggle__control
                            span.c-mngToggle__guide
                            span.c-mngToggle__switch
                    span.c-mngToggle__label
                        | Toggle label
        else
            label(for='mngToggleR')
                .c-mngToggle__layout
                    span.c-mngToggle__label
                        | Toggle label
                    .c-mngToggle__input
                        input#mngToggleR.c-mngToggle__checkbox(type='checkbox', name='toggleR')
                        .c-mngToggle__control
                            span.c-mngToggle__guide
                            span.c-mngToggle__switch