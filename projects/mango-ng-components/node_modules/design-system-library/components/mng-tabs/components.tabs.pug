mixin mngTabs(name,tabs,active,style)
	.c-mngTabs(class=style)
		ul.c-mngTabs__list(role="tablist")
			each item,index in tabs
				if (index === active)
					li.c-mngTabs__item
						a.c-mngTabs__link.is-active(href="#"+name+"-"+index, role="tab")= item
				else
					li.c-mngTabs__item
						a.c-mngTabs__link(href="#"+name+"-"+index, role="tab")= item
		.c-mngTabs__content
			block

mixin mngTabsPanel(name,id,active,style)
	if(active)
		.c-mngTabs__panel(id=name+"-"+id,class=style)
			block
	else
		.c-mngTabs__panel.u-hidden(id=name+"-"+id,class=style)
			block

