mixin mngDropdown(defaultValue, list, optClass)
    .c-mngDropdown(class=optClass)
        .c-mngDropdown__container
            .c-mngDropdown__icon
                i.o-mngIco__arrow_down--12
            input.c-mngDropdown__input(type='text' readonly='' value=defaultValue)
            .c-mngDropdown__content
                ul.c-mngDropdown-list
                    for item in list
                        li.c-mngDropdown-list__item
                            a.c-mngDropdown-list__link= item
