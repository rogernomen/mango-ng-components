mixin mngInlineDropdown(title, defaultValue, list, optClass)
    .c-mngInlineDropdown.js-inlinedropdown(class=optClass)
        .c-mngInlineDropdown__container
            .c-mngInlineDropdown__header
                span.c-mngInlineDropdown__title= title 
                span.c-mngInlineDropdown__selected= defaultValue
                    .c-mngInlineDropdown__chevron
            .c-mngInlineDropdown__content
                ul.c-mngInlineDropdown__list
                    for item in list
                        li.c-mngInlineDropdown__item= item