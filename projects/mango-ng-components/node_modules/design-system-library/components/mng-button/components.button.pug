// BUTTONS

mixin mngBtn(style)
	button.c-mngBtn(class=style, type='button')&attributes(attributes)
		block

mixin mngBtnPrimary()
	+mngBtn("c-mngBtn--primary")&attributes(attributes)
		block


mixin mngBtnSecondary()
	+mngBtn("c-mngBtn--secondary")&attributes(attributes)
		block

mixin mngBtnSecondaryReverse()
	+mngBtn("c-mngBtn--secondary c-mngBtn--reverse")&attributes(attributes)
		block

mixin mngBtnGhost()
	+mngBtn("c-mngBtn--ghost")&attributes(attributes)
		block

// LINKS

mixin a-mngBtn(url, style)
	a.c-mngBtn(class=style, href=url)&attributes(attributes)
		block

mixin a-mngBtnPrimary(url)
	+a-mngBtn(url, "c-mngBtn--primary")&attributes(attributes)
		block

mixin a-mngBtnSecondary(url)
	+a-mngBtn(url, "c-mngBtn--secondary")&attributes(attributes)
		block

mixin a-mngBtnSecondaryReverse(url)
	+a-mngBtn(url, "c-mngBtn--secondary c-mngBtn--reverse")&attributes(attributes)
		block

mixin a-mngBtnGhost(url)
	+a-mngBtn(url, "c-mngBtn--ghost")&attributes(attributes)
		block