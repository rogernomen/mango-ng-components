//==============================
// BUTTONS
//==============================

mixin mngBtnPrimarySpinner(style)
	+mngBtn("c-mngBtn--primary u-eventsNone")&attributes(attributes)
		span.u-hidden
			| Acceder
		+mngSpinnerLow(style)

mixin mngBtnSecondarySpinner()
	+mngBtn("c-mngBtn--secondary u-eventsNone")&attributes(attributes)
		span.u-hidden
			| Acceder
		+mngSpinnerHidden

mixin mngSpinner(style)
	.c-mngSpinner(class=style)

mixin mngSpinnerLow(style)
	.c-mngSpinner(class=style)
		.c-mngSpinner__text
			| Carga lenta

// Hidden text
mixin mngSpinnerHidden()
	.c-mngSpinner
		.c-mngSpinner__text.u-hidden
			| Carga lenta
