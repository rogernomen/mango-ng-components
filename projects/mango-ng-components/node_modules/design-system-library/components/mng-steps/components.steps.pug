
// Versión NO responsive
mixin mngStepsWizard(partialWidth,style)
	if partialWidth == true
		ol.c-mngStepsWizard.c-mngStepsWizard--partialWidth
			li.c-mngStepsWizard__item.is-completed
				.c-mngStepsWizard__stepWrap
					.c-mngStepsWizard__step
						.c-mngStepsWizard__btn
				.c-mngStepsWizard__text Listado

			li.c-mngStepsWizard__item.is-active
				.c-mngStepsWizard__stepWrap
					.c-mngStepsWizard__step
						.c-mngStepsWizard__btn
				.c-mngStepsWizard__text Envío
			
			li.c-mngStepsWizard__item
				.c-mngStepsWizard__stepWrap
					.c-mngStepsWizard__step
						.c-mngStepsWizard__btn
				.c-mngStepsWizard__text Pedido solicitado
	else
		ol.c-mngStepsWizard
			li.c-mngStepsWizard__item.is-clickable
				.c-mngStepsWizard__stepWrap
					.c-mngStepsWizard__step
						.c-mngStepsWizard__btn
				.c-mngStepsWizard__text Listado

			li.c-mngStepsWizard__item.is-active
				.c-mngStepsWizard__stepWrap
					.c-mngStepsWizard__step
						.c-mngStepsWizard__btn
				.c-mngStepsWizard__text Envío
			
			li.c-mngStepsWizard__item
				.c-mngStepsWizard__stepWrap
					.c-mngStepsWizard__step
						.c-mngStepsWizard__btn
				.c-mngStepsWizard__text Pedido solicitado
